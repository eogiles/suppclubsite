---
import { Icon } from "astro-icon";
import HeroImage from "~/components/hero-image.astro";
---

<section class="relative h-full bg-black">
  <div id="splash-bg-fallback" class="absolute inset-0 opacity-60">
    <HeroImage />
  </div>
  <div class="relative grid h-screen place-items-center">
    <h2 class="flex flex-col gap-4">
      <Icon name="wordmark" class="h-36 sm:h-48 md:h-64 lg:h-80" />
      <div class="sr-only">SuppClub</div>
      <div class="text-tertiary text-center font-extrabold text-4xl">
        Be a Supper Hero
      </div>
    </h2>
  </div>
</section>

<noscript>
  <style>
    #splash-bg-fallback {
      display: block;
    }
  </style>
</noscript>

